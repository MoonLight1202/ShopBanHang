<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_sheet_buy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:background="@drawable/shadow"
                android:id="@+id/imgPhoto_Buy"
                android:layout_width="180dp"
                android:layout_height="180dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnCloseBottomSheetDialogBuy"
                    android:layout_gravity="end"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_close"/>
                <TextView
                    android:id="@+id/txtProdPriceBuy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá bán: "
                    android:textColor="#3F51B5" android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <ImageButton
                    android:id="@+id/btnMinusBuy"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_minus"/>
                <EditText
                    android:enabled="false"
                    android:id="@+id/edtQuantily_Buy"
                    android:textColor="@color/black"
                    android:text="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/btnAddBuy"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_add"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnPayment"
                android:textStyle="bold"
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Thanh toán"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>